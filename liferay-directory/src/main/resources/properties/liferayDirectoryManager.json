[
    {
        title:'@@liferaydirectorymanager.configuration@@',
        properties:[
            {
                name:'url',
                label:'@@liferaydirectorymanager.url@@',
                type:'textfield',
                required:'True',
                description:'jdbc:mysql://localhost:3306/lportal'
            },
            {
                name:'username',
                label:'@@liferaydirectorymanager.username@@',
                type:'textfield',
                required:'True',
                description:'eq:test@liferay.com'
            },
            {
                name:'password',
                label:'@@liferaydirectorymanager.password@@',
                type:'password',
                required:'True'
            },
            {
                name:'driver',
                label:'@@liferaydirectorymanager.driver@@',
                type:'textfield',
                required:'True',
                description:'eq:com.mysql.jdbc.Driver'
            },
            {
                name:'hashType',
                label:'@@liferaydirectorymanager.passwordhash@@',
                type:'selectbox',
                required:'True',
                value:'SHA',
                options:[
                    {
                        value:'NONE',
                        label:'NONE'
                    },
                    {
                        value:'SHA',
                        label:'SHA/SHA-1'
                    },
                    {
                        value:'SHA-256',
                        label:'SHA-256'
                    },
                    {
                        value:'SHA-384',
                        label:'SHA-384'
                    },
                    {
                        value:'PBKDF2',
                        label:'PBKDF2'
                    },
                    {
                        value:'MD2',
                        label:'MD2'
                    },
                    {
                        value:'MD5',
                        label:'MD5'
                    },
                    {
                        value:'BCRYPT',
                        label:'BCRYPT'
                    },
                    {
                        value:'CRYPT',
                        label:'CRYPT'
                    },
                    {
                        value:'UFC-CRYPT',
                        label:'UFC-CRYPT'
                    },
                    {
                        value:'SSHA',
                        label:'SSHA'
                    }
                ]
            },
            {
                name:'encodeType',
                label:'@@liferaydirectorymanager.passwordencoding@@',
                type:'selectbox',
                required:'True',
                value:'base64',
                options:[
                    {
                        value:'base64',
                        label:'Base64'
                    },
                    {
                        value:'hex',
                        label:'Hexadecimal'
                    }
                ]
            }
        ]
    },
    {
        title:'@@liferaydirectorymanager.department.owner.role@@',
        properties:[
            {
                name:'ownerRole',
                label:'@@liferaydirectorymanager.department.owner.role.name@@',
                type:'textfield',
                required:'true',
                description:'eq:Organization Owner'
            }
        ]
    },
    {
        title:'@@liferaydirectorymanager.masterlogin.configuration@@',
        properties:[
            {
                name:'masterUser',
                label:'@@liferaydirectorymanager.masterlogin.username@@',
                type:'textfield',
                required:'true'
            },
            {
                name:'masterPassword',
                label:'@@liferaydirectorymanager.masterlogin.password@@',
                type:'password',
                required:'true'

            }
        ]
    }
]